---
import Card from './Card.astro';
import { clientTranslations } from '../../i18n';
const lang = Astro.locals.lang;
const t = clientTranslations[lang];
---

<section class="container px-4 py-12 md:px-6 relative">
    <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-8 gap-4 relative z-10">
        <div>
            <h2 class="text-2xl font-bold tracking-tight">{t.home.cards.title}</h2>
            <p class="text-muted-foreground">{t.home.cards.subtitle}</p>
        </div>
    </div>

    <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-4 relative z-10">
        <Card title={t.home.cards.card1.title} subtitle={t.home.cards.card1.subtitle} description={t.home.cards.card1.description} link="/q-bot"></Card>
        <Card title={t.home.cards.card2.title} subtitle={t.home.cards.card2.subtitle} description={t.home.cards.card2.description} link="/reloj"></Card>
        <Card title={t.home.cards.card3.title} subtitle={t.home.cards.card3.subtitle} description={t.home.cards.card3.description} link="/adivino-tu-carte"></Card>
        <Card title={t.home.cards.card4.title} subtitle={t.home.cards.card4.subtitle} description={t.home.cards.card4.description} link="/analizar-funciones"></Card>
    </div>
</section>