---
import Button from '../ui/Button.astro';
import Icon from '../ui/Icons.astro';
import { clientTranslations } from '../../i18n';
const lang = Astro.locals.lang;
const t = clientTranslations[lang];
const { title, subtitle, icon, description, link, className } = Astro.props;
---
<div class={`overflow-hidden rounded-lg w-[330px] h-full bg-card text-card-foreground shadow-[0_0_48px_0_rgba(0,0,0,0.16)] flex flex-col ${className}`}>
    <div class="p-4">
        <div class="flex flex-row items-center gap-4 mb-2">
            <div class="bg-primary/10 px-2 py-[7px] rounded-full"><Icon icon="tool" className="w-6 h-6 text-primary mt-0.5"></Icon></div>
            <div class="grid">
                <a href={link} class="hover:text-primary"><h3 class="text-2xl font-semibold">{title}</h3></a>
                <p class="text-muted-foreground text-[14px]/6 font-normal">{subtitle}</p>
            </div>
        </div>
        <p class="text-gray-600 px-3 mb-2 mt-1 text-[15px]/[21px]">{description}</p>
        <a href={link}>
            <Button variant="ghost" size="sm" className="items-center flex align-middle w-full">
                <Icon icon="eye" className="mr-2 h-4 w-4" />
                {t.common.viewTool}
            </Button>
        </a>
    </div>
</div>