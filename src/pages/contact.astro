---
import MainLayout from '../layouts/MainLayout.astro';
import Icon from "../components/ui/Icons.astro";
import Button from '../components/ui/Button.astro';
import Input from '../components/ui/Input.astro';
import { clientTranslations } from '../i18n';
const lang = Astro.locals.lang;
const t = clientTranslations[lang];
---

<MainLayout title={t.titles.contact}>
    <div class="relative">
        
        <!-- Page Header -->
        <header class="container px-4 py-8 md:py-12 relative z-10">
            <h1 class="text-3xl md:text-4xl font-bold tracking-tight mb-4">
                Contact Us
            </h1>
            <p class="text-xl text-muted-foreground max-w-3xl mb-8">
                Have questions or feedback? We'd love to hear from you.
            </p>
        </header>
        
        <!-- Main Content -->
        <div class="container px-4 pb-16 relative z-10">
            <div class="flex gap-12 w-full">
                <!-- Contact Form -->
                <div class="bg-card rounded-xl p-8 border w-full">
                    <h2 class="text-2xl font-bold mb-6">Send Us a Message</h2>
                    <form class="space-y-4" action="mailto:support@divulgandociencia.com">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <div>
                                <label for="name" class="block text-sm font-medium mb-2">{t.contact.form.name}</label>
                                <Input type="text" id="name" placeholder={t.contact.form.your_name} required />
                            </div>
                            <div>
                                <label for="email" class="block text-sm font-medium mb-2">{t.contact.form.email}</label>
                                <Input type="email" id="email" placeholder={t.contact.form.your_email} required />
                            </div>
                        </div>
                        <div>
                            <label for="subject" class="block text-sm font-medium mb-2">{t.contact.form.subject}</label>
                            <Input type="text" id="subject" placeholder={t.contact.form.your_subject} required />
                        </div>
                        <div>
                            <label for="message" class="block text-sm font-medium mb-2">{t.contact.form.message}</label>
                            <textarea id="message" rows="6" class="w-full rounded-md border border-input bg-background px-3 py-2 text-sm focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring" placeholder={t.contact.form.your_message} required></textarea>
                        </div>
                        <Button type="submit" className="w-full md:w-auto">{t.contact.form.send}</Button>
                    </form>
                </div>
                
                <!-- Contact Information -->
                <div class="max-sm:w-full bg-card rounded-xl p-8">
                    <h2 class="text-2xl font-bold mb-6">{t.contact.emails.title}</h2>
                    <div class="space-y-6">
                        <div class="flex items-start gap-4">
                            <div class="h-10 w-10 rounded-full bg-primary/10 flex items-center justify-center flex-shrink-0">
                                <Icon icon="mail" className="h-5 w-5 text-primary" />
                            </div>
                            <div>
                                <h3 class="font-semibold mb-1">{t.contact.emails.subtitle}</h3>
                                <p class="text-muted-foreground">
                                    <p class="flex gap-2">{t.contact.emails.generalInquiries}: <a href="mailto:info@divulgandociencia.com" class="text-primary hover:underline">info@divulgandociencia.com</a><br /></p>
                                    <p class="flex gap-2">{t.contact.emails.support}: <a href="mailto:support@divulgandociencia.com" class="text-primary hover:underline">support@divulgandociencia.com</a><br /></p>
                                    <p class="flex gap-2">{t.contact.emails.submissions}: <a href="mailto:submissions@divulgandociencia.com" class="text-primary hover:underline">submissions@divulgandociencia.com</a></p>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</MainLayout>

